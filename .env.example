# AgentOS Environment Configuration
# Copy this file to .env and fill in your credentials

# =========================================
# GENERAL SETTINGS
# =========================================
# Enable debug mode for verbose logging (Default: False)
AGENTOS_DEBUG=False
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (Default: INFO)
AGENTOS_LOG_LEVEL=INFO

# =========================================
# UI CONFIGURATION
# =========================================
# Main window title (Default: AgentOS Voice Assistant)
AGENTOS_WINDOW_TITLE=AgentOS Voice Assistant
# Window dimensions (Default: 1200x800)
AGENTOS_WINDOW_WIDTH=1200
AGENTOS_WINDOW_HEIGHT=800
# Ratio between conversation panel and agent execution panel (Default: 0.33)
AGENTOS_SPLITTER_RATIO=0.33
# Theme options: system, light, dark (Default: system)
AGENTOS_THEME=system
# UI font size (Default: 12)
AGENTOS_FONT_SIZE=12

# =========================================
# VOICE CONFIGURATION
# =========================================
# Wake word to activate voice commands (Default: agent)
AGENTOS_WAKE_WORD=agent
# Text-to-speech engine: system, google, azure (Default: system)
AGENTOS_TTS_ENGINE=system
# Speech rate - words per minute (Default: 150)
AGENTOS_TTS_RATE=150
# Voice ID for TTS (leave blank for system default)
AGENTOS_VOICE_ID=
# Speech recognition engine: google (Default: google)
AGENTOS_SPEECH_ENGINE=google
# Energy threshold for speech detection (Default: 4000)
AGENTOS_ENERGY_THRESHOLD=4000
# Enable wake word detection (Default: True)
AGENTOS_ENABLE_WAKE_WORD=True

# =========================================
# AGENT CONFIGURATION
# =========================================
# Enable/disable specific agents
AGENTOS_TODOIST_ENABLED=True
AGENTOS_FILEMANAGE_ENABLED=True
AGENTOS_SPOTIAUTO_ENABLED=True
AGENTOS_TWITTER_ENABLED=True
AGENTOS_AUTOBLOG_ENABLED=True

# Agent behavior settings
AGENTOS_SPOTIAUTO_AUTOPLAY=False
AGENTOS_TWITTER_AUTOREPLY=False

# FileManage agent settings
# Directories accessible to FileManage (semicolon-separated)
AGENTOS_FILEMANAGE_ALLOWED_DIRS="C:\Users\RANADEEP LASKAR\Downloads"
# Directory for file backups
AGENTOS_FILEMANAGE_BACKUP_DIR="C:/Users/RANADEEP LASKAR/Desktop/AgentOS/data/backups"

# =========================================
# API CREDENTIALS
# =========================================
# Todoist API credentials
TODOIST_API_TOKEN=your_todoist_api_token_here

# Spotify API credentials
SPOTIPY_CLIENT_ID=your_spotify_client_id_here
SPOTIPY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIPY_REDIRECT_URI=http://localhost:8888/callback

# Twitter API credentials
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_token_secret_here

# Google AI for text generation
GOOGLE_API_KEY=your_google_api_key_here
